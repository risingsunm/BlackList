<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Begin: Modified by sunrise for BlackList 2012/06/01 -->

    <style name="AhongBlackActionBarTabView" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
    </style>

    <style name="AhongBlackActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:height">64dp</item>
        <!-- Begin: Modified by sunrise for TableDivider 2012/07/25 -->
        <item name="android:backgroundStacked">@drawable/tab3</item>
        <!-- End: Modified by sunrise for TableDivider 2012/07/25 -->
        <!-- Begin: Modified by sunrise for TableViewBg 2012/07/27 -->
        <item name="android:displayOptions">@null</item>
        <item name="android:background">#000000</item>
        <!-- End: Modified by sunrise for TableViewBg 2012/07/27 -->
    </style>

    <style name="AhongBlackActionBarTheme" parent="@android:style/Theme.Holo">
        <item name="android:textColorHint">#CCCCCC</item>
    </style>

    <style name="AhongBlack" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/AhongBlackActionBarStyle</item>
        <item name="android:actionBarWidgetTheme">@style/AhongBlackActionBarTheme</item>
        <item name="android:actionBarTabStyle">@style/AhongBlackActionBarTabView</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- Begin: Modified by sunrise for TextSize 2012/06/06 -->
    <style name="list_item_primary_font_color">
        <item name="android:textColor">@color/list_primary_color</item>
        <item name="android:textSize">36px</item>
    </style>
    <style name="list_empty">
        <item name="android:textColor">@color/list_second_attach_color</item>
        <item name="android:textSize">36px</item>
    </style>

    <style name="list_item_second_font_color">
        <item name="android:textColor">@color/list_secondary_color</item>
        <item name="android:textSize">24px</item>
    </style>
    <!-- End: Modified by sunrise for TextSize 2012/06/06 -->
    <!-- End: Modified by sunrise for BlackList 2012/06/01 -->

    <!-- Begin: Modified by xiepengfei for modify the actionbar 2012/05/21 -->
    <style name="SearchActivityTheme" parent="android:Theme.Holo">
        <item name="android:actionBarItemBackground">@drawable/action_bar_item_background</item>
        <item name="android:actionBarStyle">@style/SearchActionBarStyle</item>

        <!-- Begin: Modified by sunrise for ConstantNumber 2012/06/12 -->
        <item name="android:textColorPrimary">#EBEBEB</item>
        <item name="android:textSize">36px</item>
        <item name="android:textColorSecondary">#EBEBEB</item>
        <!-- End: Modified by sunrise for ConstantNumber 2012/06/12 -->
    </style>

    <style name="SearchActionBarStyle" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:background">@drawable/ic_actionbar_bg</item>
        <item name="android:backgroundSplit">@drawable/ic_actionbar_bg</item>
        <!-- <item name="android:backgroundStacked">@drawable/ab_stacked_opaque_dark_holo_detail_actionbar</item> -->
        <item name="android:backgroundStacked">@drawable/ic_actionbar_bg</item>
        <item name="android:height">48dip</item>
        <item name="android:textSize">30px</item>
        <item name="android:textColor">#e6e5e5</item>
        <item name="android:displayOptions"></item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">#e6e5e5</item>
        <item name="android:textSize">30px</item>
        <item name="android:layout_marginLeft">22px</item>
        <item name="android:layout_marginTop">14px</item>
    </style>
    <!-- End: Modified by xiepengfei for modify action bar style 2012/05/21 -->

    <!-- Begin: bxinchun 2012-07-12 add styles -->
    <style name="result_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:textColor">#e6e5e5</item>
        <item name="android:textSize">@dimen/result_title_text_size</item>
    </style>

    <style name="result_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#31b6e7</item>
        <item name="android:textSize">22px</item>
    </style>

    <style name="list_seperate_line">
        <item name="android:background">@android:drawable/divider_horizontal_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>
    <!-- End: bxinchun 2012-07-12 add styles -->
</resources>